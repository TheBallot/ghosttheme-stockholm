<!-- start header -->
<header class="main-header">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<!-- start logo -->
				{{#if @blog.logo}}
					<a class="branding" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
				{{else}}
					<a class="branding" href="{{@blog.url}}">{{@blog.title}}</a>
				{{/if}}
				<!-- end logo -->
			</div>
		</div>
	</div>
	<!-- start navigation -->
	<nav class="main-navigation">
		<div id="main-menu">
			{{! insert navigation partial}}
			{{navigation}}
				{{! insert manuala navigation if there is no navigation}}
				{{#unless @blog.navigation}}
					{{> manual-navigation}}
				{{/unless}}
		</div>
	</nav>
</header>
<!-- end header -->

<!-- end navigation -->
